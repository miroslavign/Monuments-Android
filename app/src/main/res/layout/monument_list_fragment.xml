<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/monument_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:nextFocusDown="@+id/fab"
        android:nextFocusForward="@+id/fab"
        app:stackFromEnd="true"
        app:reverseLayout="true"
        tools:listitem="@layout/monument_list_row" />

    <TextView android:id="@+id/listEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/centerLine"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="@color/blue_grey_600"
        android:text="You have no monuments added"/>

</FrameLayout>

